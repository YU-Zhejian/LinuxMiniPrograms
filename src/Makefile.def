export VERBOSE = TRUE

.PHONY : all pp

etc:
	$(CP) src/etc/* etc/

var:
	$(CP) -fr src/var/* var/

C:
	@-$(MAKE) -C src/C

pdf:
	@-$(MAKE) -C src/doc pdf

html:
	@-$(MAKE) -C src/doc html

man:
	@-$(MAKE) -C src/doc man

usage:
	@-$(MAKE) -C src/doc usage

pp:
	bash src/exec/install_path_permissions.sh
	@-$(MAKE) -C opt permissions
