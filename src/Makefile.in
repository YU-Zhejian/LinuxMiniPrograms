# VERSION=1.4
export MKDIR = mkdir -p
export TT =
export RM=rm -rf
export CP=cp -rf
export TIMESTAMP := $(shell date +%Y_%d_%m-%H_%M_%S)
# Disable implicit rules and variables
MAKEFLAGS += --no-builtin-rules
.SUFFIXES:

.PHONY : all

.PHONY: doc
doc: pdf html man

.PHONY: C
C:
	@-$(MAKE) -C src/C

.PHONY: pdf
pdf:
	@-$(MAKE) -C src/doc pdf

.PHONY: html
html:
	@-$(MAKE) -C src/doc html

.PHONY: man
man:
	@-$(MAKE) -C src/doc man

.PHONY: pp
pp:
	bash src/exec/install_path_permissions.sh

.PHONY: test
test:
	@-$(MAKE) -C src/test TT=$(TT)

.PHONY: clean
clean:
	$(RM) *.log
	$(RM) *.tgz # For compatibility
	@-$(MAKE) -C src/test clean
	@-$(MAKE) -C src/C clean

.PHONY: distclean
distclean:clean
	$(RM) share GNUmakefile
	@-$(MAKE) -C src/test distclean
	@-$(MAKE) -C src/C distclean

.PHONY: test_list
test_list:
	ls src/test/ | grep '\.t\.sh' | sed 's;\.t\.sh;;'

PHONY: install
install: all
	@-$(MAKE) install_doc
	@-$(MAKE) install_var
	@-$(MAKE) install_etc
	@-$(MAKE) install_shlib
	@-$(MAKE) install_bin
	@-$(MAKE) install_sbin
	@-$(MAKE) -C src/C install

.PHONY: install_doc
install_doc:
	$(MKDIR) $(PREFIX)/share/ share/
	$(CP) -uv share/* $(PREFIX)/share/ >> install_$(TIMESTAMP).log

.PHONY: install_var
install_var:
	$(MKDIR) $(PREFIX)/var/
	$(CP) -uv src/var/* $(PREFIX)/var/ >> install_$(TIMESTAMP).log

.PHONY: install_etc
install_etc:
	$(MKDIR) $(PREFIX)/etc/
	$(CP) -uv etc/linuxminiprograms/path.conf $(PREFIX)/etc/linuxminiprograms/ >> install_$(TIMESTAMP).log
	$(CP) -uv src/etc/* $(PREFIX)/etc/ >> install_$(TIMESTAMP).log

.PHONY: install_shlib
install_shlib:
	$(MKDIR) $(PREFIX)/shlib/
	$(CP) -uv shlib/* $(PREFIX)/shlib/ >> install_$(TIMESTAMP).log

.PHONY: install_bin
install_bin:
	$(MKDIR) $(PREFIX)/bin/
	$(CP) -uv bin/* $(PREFIX)/bin/ >> install_$(TIMESTAMP).log

.PHONY: install_sbin
install_sbin:
	$(MKDIR) $(PREFIX)/sbin/
	$(CP) -uv sbin/* $(PREFIX)/sbin/ >> install_$(TIMESTAMP).log

