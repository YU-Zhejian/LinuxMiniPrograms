#!/usr/bin/env bash
VERSION=1.11
builtin set -eu
DN="$(readlink -f "$(dirname "${0}")")"
. "${DN}"/../etc/path.conf
. "${DN}"/../shlib/libinclude.sh
__include libisopt
__include libstr
infoh "YuZJLab RMarkDown Compiler"
infoh "Copyright (C) 2019-2021 YU Zhejian"
STDS=()
for opt in "${@}"; do
    if isopt "${opt}"; then
        case "${opt}" in
        "-h" | "--help")
            yldoc rmd
            builtin exit 0
            ;;
        "-v" | "--version")
            builtin echo ${VERSION}
            builtin exit 0
            ;;
        "-x")
            builtin set -x
            ;;
        *)
            warnh "Option '${opt}' invalid. Ignored"
            ;;
        esac
    else
        STDS=("${STDS[@]}" "${opt}")
    fi
done
for fn in "${STDS[@]}"; do
    if [ -f "${fn}" ]; then
        Rscript "${DN}/rmd.R" "${fn}"
    else
        warnh "Filename ${fn} invalid"
    fi
done
