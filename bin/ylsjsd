#!/usr/bin/env bash
#YLSJSD v1
set -ue
DN="$(readlink -f "$(dirname "${0}")")"
. "${DN}"/../etc/path.sh
. "${DN}"/../lib/libstr
. "${DN}"/../lib/libisopt
. "${DN}"/../lib/libman
touch "${DN}"/../etc/ylsjsd.conf
. "${DN}"/../etc/ylsjsd.conf
if [ -z "${YLSJSD_HOME:-}" ];then
	warnh "YLSJSD_HOME undefined. Will use ${DN}/../var/ylsjs.d"
	YLSJSD_HOME="${DN}"/../var/ylsjs.d
fi
mkdir -p "${YLSJSD_HOME}"
cd "${YLSJSD_HOME}"
STDS=""
for opt in "${@}"; do
	if isopt "${opt}"; then
		case "${opt}" in
		"-h" | "--help")
			yldoc ylsjs
			exit 0
			;;
		"-v" | "--version")
			echo "Version 1"
			exit 0
			;;
		"-x")
			set -x
			;;
		esac
	else
		[ "${STDS}" = "" ] && STDS="${opt}"
	fi
done
YLSJSD_HOME_PID=""
YLSJSD_HOME_PID="$(cat ylsjsd.lock)" || true
if [ "${STDS:-}" = "start" ]; then
	if [ -z "${YLSJSD_HOME_PID}" ];then
		bash "${DN}"/exec/ylsjsd_local.sh &
	else
		warnh "ylsjsd already started at ${YLSJSD_HOME_PID}"
	fi
elif [ "${STDS:-}" = "stop" ]; then
	if [ -z "${YLSJSD_HOME_PID}" ];then
		warnh "ylsjsd not started"
	else
		kill -15 "$(cat ylsjsd.lock)" || true
	fi
	rm -f ylsjsd.lock
elif [ "${STDS:-}" = "restart" ]; then
	ylsjsd stop
	ylsjsd start
elif [ "${STDS:-}" = "clear" ]; then
	ylsjsd stop
	if [ -n "${YLSJSD_HOME_PID}" ]; then killtree "${YLSJSD_HOME_PID}" 9;fi
	rm -rf * || true
elif [ "${STDS:-}" = "status" ]; then
	cat ylsjsd.lock 2> /dev/null || errh "ylsjsd not started"
else
	errh "Command '"${STDS:-}"' unknown"
fi
