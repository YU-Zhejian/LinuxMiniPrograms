#!/usr/bin/env bash
#YLSJS v1
set -ue
DN="$(readlink -f "$(dirname "${0}")")"
WD="$(pwd)"
. "${DN}"/../etc/path.conf
. "${DN}"/../lib/libstr
. "${DN}"/../lib/libisopt
touch "${DN}"/../etc/ylsjsd.conf
. "${DN}"/../etc/ylsjsd.conf
if [ -z "${YLSJSD_HOME:-}" ];then
	warnh "YLSJSD_HOME undefined. Will use ${DN}/../var/ylsjs.d"
	YLSJSD_HOME="${DN}"/../var/ylsjs.d
fi
mkdir -p "${YLSJSD_HOME}"
cd "${YLSJSD_HOME}"
ylsjsd start
# ============ Possess arguments ============
STDS=""
for opt in "${@}"; do
	if isopt "${opt}"; then
		case "${opt}" in
		"-h" | "--help")
			yldoc ylsjs
			exit 0
			;;
		"-v" | "--version")
			echo "Version 1"
			exit 0
			;;
		"-x")
			set -x
			;;
		esac
	else
		[ "${STDS}" = "" ] && STDS="${opt}"
	fi
done

if [ -z "${STDS:-}" ]; then
	yldoc ylsjs
	exit 0
elif [ -f "${DN}"/exec/ylsjs_"${STDS}".sh ]; then
	. "${DN}"/exec/ylsjs_"${STDS}".sh
else
	errh "subcommand '${STDS}' invalid"
fi
