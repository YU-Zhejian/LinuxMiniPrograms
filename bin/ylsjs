#!/usr/bin/env bash
#YLSJS v1
set -ue
DN="$(readlink -f "$(dirname "${0}")")"
. "${DN}"/../etc/path.sh
. "${DN}"/../lib/libstr
. "${DN}"/../lib/libisopt
# ============ Possess arguments ============
STDS=""
for opt in "${@}"; do
	if isopt "${opt}"; then
		case "${opt}" in
		"-h" | "--help")
			yldoc ylsjs
			exit 0
			;;
		"-v" | "--version")
			echo "Version 1"
			exit 0
			;;
		esac
			else
		STDS="${opt}"
	fi

done
mkdir -p "${DN}"/../var/ylsjs.d
if [ -z "${STDS:-}" ]; then
	yldoc ylsjs
	exit 0
elif [ -f "${DN}"/exec/ylsjs_"${STDS}".py ]; then
	[ "${mypython}" != "ylukh" ] || errh "Python not found"
	"${mypython}" "${DN}"/exec/ylsjs_"${STDS}".py "${@}"
elif [ -f "${DN}"/exec/ylsjs_"${STDS}".sh ]; then
	. "${DN}"/exec/ylsjs_"${STDS}".sh
else
	errh "subcommand '${STDS}' invalid"
fi
