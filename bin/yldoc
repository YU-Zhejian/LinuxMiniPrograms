#!/bin/bash
DN=$(dirname ${0})
more="more"
echo -e "\e[33mYuZJLab Documentation System"
echo -e "Copyright (C) 2019-2020 YU Zhejian\e[0m"
{ . $DN/../lib/libisopt; } && { echo -e "\e[33mlibisopt loaded\e[0m"; } || {
    echo -e "\e[31mFail to load libisopt.\e[0m"
    exit 1
}
for opt in "${@}"; do
    if isopt ${opt}; then
        case ${opt} in
        "-h" | "--help")
            echo -e "\e[33mThis is a Documentation System. Useage:"
            echo "yldoc [string] [options]"
            echo
            echo "Available options:"
            echo "  -h|--help Display this help."
            echo "  -v|--version Print version information."
            echo "  --more:[program]|The GNU/Linux program \"more\" will be used if there's too much output. Use [program] to replace it."
            echo -e "\e[0m"
            exit 0
            ;;
        "-v" | "--version")
            echo "Version 1"
            exit 0
            ;;
        --more\:*)
            more=${opt:7}
            ;;
        "-l"|"--list")
        for fn in ${DN}/../doc/*;do
            cat ${fn}|grep "^____"
        done
        ;;
        *)
            echo -e "\e[31mERROR: Option '${opt}' invalid.\e[0m"
            exit 1
            ;;
        esac
    else
        STDS="${STDS}${opt}"
    fi
done
STDI=(${STDS})
if [ -f ${DN}/../etc/yldoc.conf ]; then
    while read line; do
        li=(${line})
        for ((i=0;i<${#STDI[@]};i++)); do
            if [ ${STDI[${i}]} = ${li[0]} ]; then
                STDI[${i}]=${li[1]}
            fi
        done
    done <${DN}/../etc/yldoc.conf
fi
for fn in "${STDI[@]}"; do
    if [ -f ${DN}/../doc/${fn}.usage ]; then
        cat ${DN}/../doc/${fn}.usage | ${more}
    else
        echo -e "\e[31mERROR: ${DN}/../doc/${fn}.usage not found!\e[0m"
        exit 1
    fi
done
