#!/usr/bin/env bash
# YLDOC V1P7
set -ue
DN="$(readlink -f "$(dirname "${0}")")"
. "${DN}"/../lib/libisopt
. "${DN}"/../etc/path.sh
. "${DN}"/../lib/libstr
infoh "YuZJLab Documentation System"
infoh "Copyright (C) 2019-2021 YU Zhejian"


STDS=()
for opt in "${@}"; do
	if isopt "${opt}"; then
		case "${opt}" in
		"-h" | "--help")
			yldoc yldoc
			exit 0
			;;
		"-v" | "--version")
			echo "Version 1 Patch 7"
			exit 0
			;;
		"-l" | "--list")
			infoh "Reading database..."
			ls -1 "${DN}"/../usage | sort | sed 's/.usage$//'
			exit 0
			;;
		*)
			warnh "Option '${opt}' invalid. Ignored"
			;;
		esac
	else
		STDS=("${STDS[@]}" "${opt}")
	fi
done
if [ ${#STDS[@]} -eq 0 ]; then
	yldoc yldoc
	exit 0
fi
if [ -f "${DN}"/../etc/yldoc.conf ]; then
	while read line; do
		li=(${line})
		for ((i = 0; i < ${#STDS[@]}; i++)); do
			if [ ${STDS[${i}]} = ${li[0]} ]; then
				STDS[${i}]=${li[1]}
			fi
		done
	done < "${DN}"/../etc/yldoc.conf
fi
for fn in "${STDS[@]}"; do
	if [ -f "${DN}"/../usage/"${fn}".usage ]; then cat "${DN}"/../usage/"${fn}".usage ; else errh "${DN}/../usage/${fn}.usage not found"; fi
done
