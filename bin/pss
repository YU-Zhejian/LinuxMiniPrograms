#!/bin/bash
# PSS V1P7
echo -e "\e[33mYuZJLab Process Snapshot Searcher"
echo -e "Copyright (C) 2019-2020 YU Zhejian\e[0m"
cd $(dirname ${0})
{ . ../lib/libisopt; } && { echo -e "\e[33mlibisopt loaded\e[0m"; } || {
    echo -e "\e[31mFail to load libisopt.\e[0m"
    exit 1
}
more="more"
for opt in "${@}"; do
    if isopt ${opt}; then
        case ${opt} in
        "-h" | "--help")
            yldoc pss
            exit 0
            ;;
        "-v" | "--version")
            echo "Version 1 patch 7"
            exit 0
            ;;
        --more\:*)
            more=${opt:7}
            ;;
        *)
            echo -e "\e[31mERROR: Option '${opt}' invalid.\e[0m"
            exit 1
            ;;
        esac
    else
        STDS="${STDS} ${opt}"
    fi
done
psstmp=$(mktemp -t psstmp.XXXXXX)
pssstmp=$(mktemp -t psstmp.XXXXXX)
if [[ ${OSTYPE} = *BSD ]];then
    /bin/ps -a -l >${psstmp}
elif [[ $(ps --version) = *cygwin* ]];then
    /usr/bin/ps -W >${psstmp}
else
    /bin/ps -A all >${psstmp}
fi
if [ -z "${STDS}" ]; then
    cat ${psstmp} | ${more}
else
    head -n 1 ${psstmp}
    STDI=(${STDS})
    for fn in "${STDI[@]}"; do
        cat ${psstmp} | grep -- ${fn} >>${pssstmp}
    done
    cat ${pssstmp} | ${more}
fi
rm ${psstmp} ${pssstmp}
