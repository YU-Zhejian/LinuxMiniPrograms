#!/usr/bin/env bash
VERSION=1.12
builtin set -eu
DN="$(readlink -f "$(dirname "${0}")")"

. "${DN}"/../etc/path.conf
. "${DN}"/../shlib/libinclude.sh
__include libisopt
__include libstr
infoh "YuZJLab Process Snapshot Searcher"
infoh "Copyright (C) 2019-2021 YU Zhejian"
STDS=()
for opt in "${@}"; do
    if isopt "${opt}"; then
        case "${opt}" in
        "-h" | "--help")
            yldoc pss
            builtin exit 0
            ;;
        "-v" | "--version")
            builtin echo ${VERSION}
            builtin exit 0
            ;;
        "-x")
            builtin set -x
            ;;
        *)
            warnh "Option '${opt}' invalid. Ignored"
            ;;
        esac
    else
        STDS=("${STDS[@]}" "${opt}")
    fi
done
psstmp=$(mktemp -t psstmp.XXXXXX)
pssstmp=$(mktemp -t psstmp.XXXXXX)
if ! ps --version &>>/dev/null; then
    ps -al &>"${psstmp}"
elif [[ $(ps --version) == *"Cygwin"* ]]; then
    ps -aeW &>"${psstmp}"
else
    ps -AT H all &>"${psstmp}"
fi
if [ ${#STDS[@]} -eq 0 ]; then
    cat "${psstmp}"
else
    head -n 1 ${psstmp}
    for fn in "${STDS[@]}"; do
        cat "${psstmp}" | grep -- "${fn}" >>"${pssstmp}"
    done
    cat "${pssstmp}"
fi
rm "${psstmp}" "${pssstmp}"
