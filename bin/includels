#!/usr/bin/env bash
# INCLUDELS v1
set -ue
DN="$(readlink -f "$(dirname "${0}")")"
echo -e "\033[33mYuZJLab INCLUDEPATH ls"
echo -e "Copyright (C) 2019-2020 YU Zhejian\033[0m"
oldifs="${IFS}"
. "${DN}"/../lib/libisopt
. "${DN}"/../etc/path.sh
more="${mymore}"
gccinclude=$(for dir in  /lib*/gcc/*/*/include \
/usr/lib*/gcc/*/*/include \
"${HOME}"/usr/lib*/gcc/*/*/include \
"${HOME}"/usr/local/lib*/gcc/*/*/include; do echo ${dir}; done | tr '\n' ':')
INPATH="/usr/include:/usr/local/include:${gccinclude}:${C_INCLUDE_PATH:-}"${CPLUS_INCLUDE_PATH:-}
. "${DN}"/../lib/libpath
IFS=":"
eachpath=(${valid_path})
unset duplicated_path invalid_path
IFS=''
STDS=()
for opt in "${@}"; do
	if isopt "${opt}"; then
		case "${opt}" in
		"-h" | "--help")
			yldoc pls
			exit 0
			;;
		"-v" | "--version")
			echo "Version 1"
			exit 0
			;;
		"-l" | "--list")
			echo ${valid_path} | tr ':' '\n'
			unset valid_path
			exit 0
			;;
		--more\:*)
			more=$"{opt:7}"
			if $(
				"${more}" --help &>/dev/null
				echo ${?}
			) -eq 127; then
				echo -e "\033[31mERROR! Invalid More '${more}'! Will use original '${mymore}' instead.\033[0m"
				more="${mymore}"
			else
				echo -e "\033[33mWill use '${more}' as More.\033[0m"
			fi
			;;
		*)
			echo -e "\033[31mERROR: Option '${opt}' invalid.\033[0m"
			exit 1
			;;
		esac
	else
		STDS=(${STDS[@]} "${opt}")
	fi
done
unset valid_path
tmpf="$(mktemp -t pls.XXXXXX)"
echo -e "\033[33mReading database...\033[0m"
for dir in "${eachpath[@]}"; do
	"${myfind}" "${dir}" 2> /dev/null >>"${tmpf}" || true
done
if [ ${#STDS[@]} -eq 0 ]; then
	"${mycat}" "${tmpf}" | "${more}"
else
	IFS=''
	grepstr=''
	for fn in "${STDS[@]}"; do
		grepstr="${grepstr} -e ${fn}"
	done
	eval "${mycat}" \"${tmpf}\"\|"${mygrep}" "${grepstr}"\|"${more}"
fi
rm "${tmpf}"
IFS="${oldifs}"
