#!/usr/bin/env bash
# BHS V1EP5
set -ue
DN="$(readlink -f "$(dirname "${0}")")"
. "${DN}"/../etc/path.sh
more="${mymore}"
echo -e "\e[33mYuZJLab Bash History Searcher"
echo -e "Copyright (C) 2019-2020 YU Zhejian\e[0m"
. "${DN}"/../lib/libisopt
STDS=''
for opt in "${@}"; do
    if isopt "${opt}"; then
        case "${opt}" in
        "-h" | "--help")
            yldoc bhs
            exit 0
            ;;
        "-v" | "--version")
            echo "Version 1 Emergency Patch 5"
            exit 0
            ;;
        --more\:*)
            more="${opt:7}"
            if $("${more}" --help &>/dev/null;echo ${?}) -eq 127; then
                echo -e "\e[31mERROR! Invalid More '${more}'! Will use original '${mymore}' instead.\e[0m"
                more="${mymore}"
            else
                echo -e "\e[33mWill use '${more}' as More.\e[0m"
            fi
            ;;
        *)
            echo -e "\e[31mERROR: Option '${opt}' invalid.\e[0m"
            exit 1
            ;;
        esac
    else
        STDS="${STDS}${opt} "
    fi
done
STDS=$(echo "${STDS}"|"${mysed}" "s/ $//")
if [ -n "${STDS}" ]; then
    echo \"${STDS}\"
    "${mycat}" -n ~/.bash_history | "${mygrep}" --color=auto -- "${STDS}" | "${more}"
else
    "${mycat}" -n ~/.bash_history | "${more}"
fi
