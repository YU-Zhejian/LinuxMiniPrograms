#!/usr/bin/env bash
# BHS V1P6
set -ue
DN="$(readlink -f "$(dirname "${0}")")"
. "${DN}"/../etc/path.sh

. "${DN}"/../lib/libisopt
. "${DN}"/../lib/libstr
infoh "YuZJLab Bash History Searcher"
infoh "Copyright (C) 2019-2021 YU Zhejian"
STDS=""
for opt in "${@}"; do
	if isopt "${opt}"; then
		case "${opt}" in
		"-h" | "--help")
			yldoc bhs
			exit 0
			;;
		"-v" | "--version")
			echo "Version 1 Patch 6"
			exit 0
			;;
		*)
			warnh "Option '${opt}' invalid. Ignored"
			;;
		esac
	else
		STDS="${STDS}${opt} "
	fi
done
STDS=$(echo "${STDS}" | "${mysed}" "s/ $//")
if [ -n "${STDS}" ]; then
	echo \"${STDS}\"
	"${mycat}" -n ~/.bash_history | "${mygrep}" --color=auto -- "${STDS}"
else
	"${mycat}" -n ~/.bash_history
fi
