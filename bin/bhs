#!/usr/bin/env bash
# BHS V1P8
set -ue
DN="$(readlink -f "$(dirname "${0}")")"
. "${DN}"/../etc/path.sh
. "${DN}"/../lib/libisopt
. "${DN}"/../lib/libstr
infoh "YuZJLab Bash History Searcher"
infoh "Copyright (C) 2019-2021 YU Zhejian"
STDS=""
HISTTIMEFORMAT='%F %T '
for opt in "${@}"; do
	if isopt "${opt}"; then
		case "${opt}" in
		"-h" | "--help")
			yldoc bhs
			exit 0
			;;
		"-v" | "--version")
			echo "Version 1 Patch 8"
			exit 0
			;;
		*)
			warnh "Option '${opt}' invalid. Ignored"
			;;
		esac
	else
		STDS="${STDS} -e '${opt}'"
	fi
done
STDS=$(echo "${STDS}" | sed "s/ $//")
if [ -n "${STDS}" ]; then
	echo "${STDS}"
	eval cat -n ~/.bash_history \| grep --color=auto "${STDS}"
else
	cat -n ~/.bash_history
fi
