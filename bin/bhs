#!/usr/bin/env bash
VERSION=1.11
builtin set -eu
DN="$(readlink -f "$(dirname "${0}")")"
. "${DN}"/../etc/path.conf
. "${DN}"/../shlib/libinclude.sh
__include libisopt
__include libstr

infoh "YuZJLab Bash History Searcher"
infoh "Copyright (C) 2019-2021 YU Zhejian"
STDS=""
for opt in "${@}"; do
    if isopt "${opt}"; then
        case "${opt}" in
        "-h" | "--help")
            yldoc bhs
            builtin exit 0
            ;;
        "-v" | "--version")
            builtin echo ${VERSION}
            builtin exit 0
            ;;
        "-x")
            builtin set -x
            ;;
        *)
            warnh "Option '${opt}' invalid. Ignored"
            ;;
        esac
    else
        STDS="${STDS} -e '${opt}'"
    fi
done
STDS=$(builtin echo "${STDS}" | sed "s/ $//")
if [ -n "${STDS}" ]; then
    # builtin echo "${STDS}"
    builtin eval cat -n ~/.bash_history \| grep --color=auto "${STDS}" || true
else
    cat -n ~/.bash_history || true
fi
