#!/usr/bin/env bash
# CONFIGPATH V1P1
set -eu
cd INSTALLER
INPATH="${PATH}"
path_sh="../etc/path.sh"
if ! [ -f "${path_sh}" ]; then
    mkdir -p ../etc
    touch "${path_sh}"
else
    . "${path_sh}"
fi
#=====os=====
if [ -z "${myos:-}" ]; then
    os_type=$(uname -mrs)
    echo "Current OS: ${os_type}"
    os_type_main=$(echo ${os_type} | cut -f 1 -d ' ')
    os_type_version=$(echo ${os_type} | cut -f 2 -d ' ')
    echo "myos=\"${os_type_main}\" #${os_type_version}" >>"${path_sh}"
    unset os_type os_type_main os_type_version
fi
#=====path=====
echo -e "\033[33mEnumerating valid path...\033[0m"
. ../lib/libpath
unset invalid_path duplicated_path
IFS=':'
eachpath=(${valid_path})
IFS=''
unset binpath
echo ${valid_path} | tr ':' '\n'
echo -e "\033[33mEnd locating valid path.\033[0m"
unset valid_path
. exec/ls.sh
. exec/grep.sh
. exec/sed.sh
. exec/rm.sh
. exec/python.sh
. exec/tar.sh
. exec/gzip.sh
. exec/cp.sh
. exec/mv.sh
. exec/mkdir.sh
. exec/chmod.sh
. exec/chown.sh
. exec/bgzip.sh
. exec/pigz.sh
. exec/xzip.sh
. exec/bzip2.sh
. exec/7z.sh
. exec/zip.sh
. exec/rar.sh
. exec/unzip.sh
. exec/unrar.sh
. exec/parallel.sh
. exec/find.sh
. exec/sort.sh
. exec/cat.sh
. exec/split.sh
. exec/more.sh
. exec/cut.sh
. exec/head.sh
. exec/tail.sh
. exec/ps.sh
echo -e "\033[33mAll configurations are printed as follows:\033[0m"
cat "${path_sh}" | "${mygrep}" -v '^$' |"${mygrep}" -v '^#' | "${mysed}" 's/^my//' | "${mysed}" 's/=/\\\\033[33m in \\\\033[0m/ ' | "${mysed}" 's/ #/\\\\033[33m, \\\\033[32m/' | while read line; do echo -e "${line}\033[0m"; done
cd ..
